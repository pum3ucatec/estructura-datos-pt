using System; // Detectar numero primo
Console.WriteLine("Ingresa un n√∫mero: ");
int numero = int.Parse(Console.ReadLine());
bool esPrimo = true;

if (numero <= 1)
{
    esPrimo = false;
}
else
{
    for (int i = 2; i <= Math.Sqrt(numero); i++)
    {
        if (numero % i == 0)
        {
            esPrimo = false;
            break;
        }
    }
}

Console.WriteLine(esPrimo ? "Es primo." : "No es primo.");